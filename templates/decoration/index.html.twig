{% extends 'base.html.twig' %}

{% block title %}Decoration index{% endblock %}

{% block body %}
    <h1>Decoration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>Presentation</th>
                <th>Client</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for decoration in decorations %}
            <tr>
                <td>{{ decoration.id }}</td>
                <td>{{ decoration.picture }}</td>
                <td>{{ decoration.presentation }}</td>
                <td>{{ decoration.client }}</td>
                <td>
                    <a href="{{ path('decoration_show', {'id': decoration.id}) }}">show</a>
                    <a href="{{ path('decoration_edit', {'id': decoration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('decoration_new') }}">Create new</a>
{% endblock %}
